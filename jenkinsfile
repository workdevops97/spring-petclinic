pipeline {
    agent{label 'MAVEN'}
    options{
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers{
        cron('* * * * *')
    }
    tools{
        maven 'maven'
    }
    stages{
        stage('git'){
            steps{
                git url: 'https://github.com/workdevops97/spring-petclinic.git',
                branch: 'dev'
            }
    }
    stage('build'){
        steps{
            sh 'mvn clean package'
        }
    }

}
}