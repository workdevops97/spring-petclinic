pipeline {
    agent{label 'MAVEN && JAVA_17'}
    options{
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers{
        cron('* * * * *')
    }
    tools{
        maven 'maven',
        java 'java'

    }
    stages{
        stage('git'){
            steps{
                git url: 'https://github.com/workdevops97/spring-petclinic.git',
                branch: 'dev'
            }
    }
    stage('build'){
        steps{
            sh 'mvn clean package'
            archiveArtifacts artifacts: '**/spring-petclinic-*.jar'
            junit testResults: '**/TEST-*.xml'
        }
        post {
            success{
                mail subject: 'The project has been successful',
                     from: 'sandbox.smtp.mailtrap.io',
                     to: 'workdevops97@gmail.com',
                     body: "The project has been successful"
            }
            failure{
                mail subject: 'The project has been failed',
                     from: 'sandbox.smtp.mailtrap.io',
                     to: 'workdevops97@gmail.com',
                     body: "The project has been failed"
            }
        }
    }

}

}